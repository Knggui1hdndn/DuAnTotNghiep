<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.pay.PaymentConfirmationActivity">

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment confirmation"
        android:textSize="30sp"
        android:textStyle="bold|normal"
        android:gravity="center"
        android:fontFamily="@font/inter_bold"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/task_alt"
        android:layout_gravity="center"
        android:layout_marginTop="126dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sucessfull payment"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textStyle="bold|normal"
        android:fontFamily="@font/inter_bold"
        android:layout_marginTop="27dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you for your order!"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textStyle="normal"
        android:fontFamily="@font/inter_bold"
        android:layout_marginTop="27dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:background="@color/black"
        android:fontFamily="@font/inter_bold"
        android:text="Back to main"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:fontFamily="@font/inter_bold"
        android:text="Go to the orde"
        android:textColor="@color/black"
        android:textStyle="bold" />
</LinearLayout>