<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MyProfileActivity"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:textSize="30sp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:fontFamily="@font/inter_bold"
        android:textStyle="normal|bold"
        android:textColor="#000000"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgProfile"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_launcher_background"
        android:background="@drawable/circular_background"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To Dang Dat"
        android:id="@+id/tvNameProfile"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0866084512"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:id="@+id/tvPhoneProfile"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvEmailProfile"
        android:text="dattdph25953@fpt.edu.vn"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvAddressProfile"
        android:text="Hợp Tiến - Mỹ Đức - Hà Nội"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"/>



    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:background="@color/black"
        android:fontFamily="@font/inter_bold"
        android:text="Up date"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:fontFamily="@font/inter_bold"
        android:text="Delete account"
        android:textColor="@color/black"
        android:textStyle="bold" />

</LinearLayout>