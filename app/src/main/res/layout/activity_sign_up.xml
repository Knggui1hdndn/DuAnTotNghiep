<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SignUpActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textSize="40dp"
        android:textColor="#090909"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/edEmailSignup"
        android:hint="E-mail"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>
    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/edPasswordSignup"
        android:hint="Password"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:inputType="textPassword"/>
    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/edRePasswordSignup"
        android:hint="Repect Password"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:inputType="textPassword"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:id="@+id/btnSignIn"
        android:textColor="#F3ECEF"
        android:backgroundTint="#090909"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Sign in with Google"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:id="@+id/btnSignUpGoogle"
        android:textColor="#0E0E0E"
        android:backgroundTint="#9A9999"
        />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Sign in with Facebook"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/btnSignUpFacebook"
        android:textColor="#0E0E0E"
        android:backgroundTint="#9A9A9A"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        android:gravity="center"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Don't have account?"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:layout_marginLeft="15dp"
            android:textColor="#090909"
            android:id="@+id/SignUp"
            android:gravity="center"
            />

    </LinearLayout>
</LinearLayout>